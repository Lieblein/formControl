.form-filter {
    &__row {
        display: flex;

        &:first-child {
            margin-bottom: 10px;
        }
    }

    &__col {
        padding-right: 20px;

        &--polis {
            width: 66.66666666%;
        }

        &--button {
            width: 33.33333333%;
            padding-top: 21px;
        }
    }

    &__button {
        width: 100%;
        margin-bottom: 5px;
    }

    &__error {
        color: var(--color-error);
    }
}