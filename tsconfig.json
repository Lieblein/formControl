{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "es2015",
    "jsx": "react",
    "target": "es5",
    "removeComments": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
